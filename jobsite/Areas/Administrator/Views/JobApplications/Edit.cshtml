@model jobsite.Models.JobApplication

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Job Application</h4>
<hr />

<div>
    <h4>Change Statues of Job Application</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobPost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobPost.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Candidate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrefDateToJoin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrefDateToJoin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppStatus)
        </dd>


    </dl>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="AppStatus" class="control-label"></label>
                <select asp-for="AppStatus" asp-items="Html.GetEnumSelectList<AppStatus>()" class="form-control"></select>
                <span asp-validation-for="AppStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Status" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="JobPosts" asp-route-id="@Model.JobPostId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

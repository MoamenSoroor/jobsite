                <span asp-validation-for="AppStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobPostId" class="control-label">Job Post</label>
                <select asp-for="JobPostId" class ="form-control" asp-items="ViewBag.JobPostId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CandidateId" class="control-label">Candidate</label>
                <select asp-for="CandidateId" class ="form-control" asp-items="ViewBag.CandidateId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CVId" class="control-label"></label>
                <select asp-for="CVId" class ="form-control" asp-items="ViewBag.CVId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
